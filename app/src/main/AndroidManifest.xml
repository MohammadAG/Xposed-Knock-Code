<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.rijul.knockcode"
    android:versionCode="14"
    android:versionName="1.1.3">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".Main"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".AboutActivity"
            android:label="@string/pref_about_title"
            android:parentActivityName=".SettingsActivity"
            android:theme="@style/MyMaterialTheme"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:theme="@style/MyMaterialTheme"></activity>

        <receiver
            android:name=".KillReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="me.rijul.knockcode.KILL_THE_CODE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="65" />
        <meta-data
            android:name="xposeddescription"
            android:value="Knock code for near AOSP 5.0.x, 5.1.x and 6.0.x devices" />

        <activity
            android:name=".CustomShortcutActivity"
            android:label="@string/custom_shortcuts_title"
            android:parentActivityName=".SettingsActivity"
            android:theme="@style/MyMaterialTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.rijul.knockcode.SettingsActivity" />
        </activity>
    </application>

</manifest>

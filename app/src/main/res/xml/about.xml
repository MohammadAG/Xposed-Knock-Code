<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <Preference
        android:key="help_key"
        android:summary="@string/about_help_description"
        android:title="@string/about_help_title">
        <intent android:action="android.intent.action.VIEW"
            android:data="http://forum.xda-developers.com/xposed/modules/lp-knock-code-screen-t3272679"/>
    </Preference>

    <Preference
        android:key="license_key"
        android:title="@string/about_license_title"
        android:summary="@string/about_license_description">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://www.gnu.org/licenses/gpl-3.0.txt"/>
    </Preference>

    <Preference
        android:key="disclaimer_key"
        android:title="@string/about_disclaimer_title"
        android:summary="@string/about_disclaimer_description"/>

    <Preference
        android:key="source_key"
        android:title="@string/about_source_title">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://github.com/Rijul-Ahuja/Xposed-Knock-Code"/>
    </Preference>

    <PreferenceCategory android:title="@string/about_authors" >
        <Preference
            android:key="mohammad_key"
            android:title="@string/about_mohammadag">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://mohammadag.xceleo.org/wiki"/>
        </Preference>

        <Preference
            android:key="rijul_key"
            android:title="@string/about_rijul"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about_translators" >
        <Preference
            android:key="translator_pt_br_gabriel"
            android:title="@string/translator_pt_br_gabriel"/>
        <Preference
            android:title="@string/translator_pl_pantin"/>
    </PreferenceCategory>

    <PreferenceCategory android:key="hidden">
        <EditTextPreference
            android:defaultValue="2"
            android:numeric="integer"
            android:key="pattern_size_columns"/>
        <EditTextPreference
            android:defaultValue="2"
            android:numeric="integer"
            android:key="pattern_size_rows"/>
    </PreferenceCategory>
</PreferenceScreen>